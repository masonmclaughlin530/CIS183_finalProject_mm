<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddCardBrand"
    android:background="#87BFFF">

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:lineSpacingExtra="24sp"
        android:text="Add Card Type"
        android:textColor="#ADD7F6"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_v_addBrand_errorMsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="82dp"
        android:layout_marginTop="120dp"
        android:text="Error"
        android:textColor="#FF0101"
        app:layout_constraintStart_toStartOf="@+id/et_v_addBrand_cardType"
        app:layout_constraintTop_toBottomOf="@+id/et_v_addBrand_cardType" />

    <EditText
        android:id="@+id/et_v_addBrand_cardType"
        android:layout_width="220dp"
        android:layout_height="104dp"
        android:layout_marginTop="115dp"
        android:ems="10"
        android:hint="Add Brand"
        android:inputType="text"
        android:textColor="#ADD7F6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_v_addBrand_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="19dp"
        android:layout_marginBottom="23dp"
        android:text="Back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="#ADD7F6"/>

    <Button
        android:id="@+id/btn_v_addBrand_addBrand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="23dp"
        android:layout_marginBottom="24dp"
        android:text="Add"
        app:iconTint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:rippleColor="#87BFFF"
        android:background="#ADD7F6"
        />
</androidx.constraintlayout.widget.ConstraintLayout>