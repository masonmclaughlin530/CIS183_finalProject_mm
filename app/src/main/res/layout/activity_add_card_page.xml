<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddCardPage">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="119dp"
        android:layout_height="37dp"
        android:text="Enter First Name"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="52dp" />

    <EditText
        android:id="@+id/et_v_addCard_firstName"
        android:layout_width="243dp"
        android:layout_height="46dp"
        android:ems="10"
        android:hint="First Name"
        android:inputType="text"
        tools:layout_editor_absoluteX="152dp"
        tools:layout_editor_absoluteY="42dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="104dp"
        android:layout_height="35dp"
        android:text="Add Card"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="153dp"
        tools:layout_editor_absoluteY="-2dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="119dp"
        android:layout_height="31dp"
        android:text="Enter Last Name"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="104dp" />

    <EditText
        android:id="@+id/editTextText2"
        android:layout_width="235dp"
        android:layout_height="46dp"
        android:ems="10"
        android:hint="Last Name"
        android:inputType="text"
        tools:layout_editor_absoluteX="155dp"
        tools:layout_editor_absoluteY="94dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="101dp"
        android:layout_height="26dp"
        android:text="Enter Year"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="150dp" />

    <EditText
        android:id="@+id/editTextText3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Year"
        android:inputType="text"
        tools:layout_editor_absoluteX="154dp"
        tools:layout_editor_absoluteY="145dp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="118dp"
        android:layout_height="27dp"
        android:text="Pick Sport"
        tools:layout_editor_absoluteX="14dp"
        tools:layout_editor_absoluteY="201dp" />

    <Spinner
        android:id="@+id/sp_v_addCard_sports"
        android:layout_width="157dp"
        android:layout_height="29dp"
        tools:layout_editor_absoluteX="155dp"
        tools:layout_editor_absoluteY="199dp" />

    <Spinner
        android:id="@+id/sp_v_addCard_brands"
        android:layout_width="159dp"
        android:layout_height="27dp"
        tools:layout_editor_absoluteX="155dp"
        tools:layout_editor_absoluteY="276dp" />

    <TextView
        android:id="@+id/tv_v_addCard_addSport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Sport"
        tools:layout_editor_absoluteX="199dp"
        tools:layout_editor_absoluteY="237dp" />

    <TextView
        android:id="@+id/tv_v_addCard_addBrand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Brand"
        tools:layout_editor_absoluteX="197dp"
        tools:layout_editor_absoluteY="326dp" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="125dp"
        android:layout_height="27dp"
        android:text="Pick Brand"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="276dp" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Card Number"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="385dp" />

    <EditText
        android:id="@+id/et_v_addCard_cardNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Num on back of card"
        android:inputType="text"
        tools:layout_editor_absoluteX="158dp"
        tools:layout_editor_absoluteY="370dp" />

    <Spinner
        android:id="@+id/sp_v_addCard_cardType"
        android:layout_width="233dp"
        android:layout_height="37dp"
        tools:layout_editor_absoluteX="158dp"
        tools:layout_editor_absoluteY="454dp" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pick Card Type"
        tools:layout_editor_absoluteX="23dp"
        tools:layout_editor_absoluteY="464dp" />

    <TextView
        android:id="@+id/tv_v_addCard_addType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Card Type"
        tools:layout_editor_absoluteX="199dp"
        tools:layout_editor_absoluteY="511dp" />

    <TextView
        android:id="@+id/tv_v_addCard_errorMsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please Fill Out All Fields"
        android:textColor="#DB1111"
        tools:layout_editor_absoluteX="135dp"
        tools:layout_editor_absoluteY="565dp" />

    <Button
        android:id="@+id/btn_v_addCard_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        tools:layout_editor_absoluteX="19dp"
        tools:layout_editor_absoluteY="648dp" />

    <Button
        android:id="@+id/btn_v_addCard_addCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add"
        tools:layout_editor_absoluteX="262dp"
        tools:layout_editor_absoluteY="648dp" />
</androidx.constraintlayout.widget.ConstraintLayout>