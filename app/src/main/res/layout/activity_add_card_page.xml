<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddCardPage"
    android:background="#3F8EFC">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="119dp"
        android:layout_height="37dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="64dp"
        android:text="Enter First Name"
        android:textColor="#ADD7F6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_v_addCard_firstName"
        android:layout_width="243dp"
        android:layout_height="46dp"
        android:layout_marginTop="56dp"
        android:ems="10"
        android:hint="First Name"
        android:inputType="text"
        android:textColor="#ADD7F6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.575"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="104dp"
        android:layout_height="35dp"
        android:layout_marginTop="20dp"
        android:text="Add Card"
        android:textColor="#3B28CC"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.514"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="119dp"
        android:layout_height="31dp"
        android:layout_marginTop="24dp"
        android:text="Enter Last Name"
        android:textColor="#ADD7F6"
        app:layout_constraintEnd_toStartOf="@+id/et_v_addcard_lname"
        app:layout_constraintHorizontal_bias="0.484"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <EditText
        android:id="@+id/et_v_addcard_lname"
        android:layout_width="235dp"
        android:layout_height="46dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:ems="10"
        android:hint="Last Name"
        android:inputType="text"
        android:textColor="#ADD7F6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_v_addCard_firstName" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="101dp"
        android:layout_height="26dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:text="Enter Year"
        android:textColor="#ADD7F6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <EditText
        android:id="@+id/et_v_addcard_year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="44dp"
        android:ems="10"
        android:hint="Year"
        android:inputType="text"
        android:textColor="#ADD7F6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/et_v_addcard_lname" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="118dp"
        android:layout_height="27dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="52dp"
        android:text="Pick Sport"
        android:textColor="#ADD7F6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <Spinner
        android:id="@+id/sp_v_addCard_sports"
        android:layout_width="157dp"
        android:layout_height="29dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="64dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/textView8"
        app:layout_constraintTop_toBottomOf="@+id/et_v_addcard_year" />

    <Spinner
        android:id="@+id/sp_v_addCard_brands"
        android:layout_width="159dp"
        android:layout_height="27dp"
        android:layout_marginTop="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toEndOf="@+id/textView11"
        app:layout_constraintTop_toBottomOf="@+id/sp_v_addCard_sports" />

    <TextView
        android:id="@+id/tv_v_addCard_addSport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Sport"
        android:textColor="#87BFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.681"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sp_v_addCard_sports"
        app:layout_constraintVertical_bias="0.037" />

    <TextView
        android:id="@+id/tv_v_addCard_addBrand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Brand"
        android:textColor="#87BFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.686"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sp_v_addCard_brands"
        app:layout_constraintVertical_bias="0.05" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="125dp"
        android:layout_height="27dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:text="Pick Brand"
        android:textColor="#ADD7F6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="76dp"
        android:text="Enter Card Number"
        android:textColor="#ADD7F6"
        app:layout_constraintEnd_toStartOf="@+id/et_v_addCard_cardNum"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView11" />

    <EditText
        android:id="@+id/et_v_addCard_cardNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="32dp"
        android:ems="10"
        android:hint="Num on back of card"
        android:inputType="text"
        android:textColor="#ADD7F6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sp_v_addCard_brands" />

    <Spinner
        android:id="@+id/sp_v_addCard_cardType"
        android:layout_width="233dp"
        android:layout_height="37dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="236dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_v_addCard_cardNum"
        app:layout_constraintVertical_bias="0.976" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="244dp"
        android:text="Pick Card Type"
        android:textColor="#ADD7F6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/sp_v_addCard_cardType"
        app:layout_constraintHorizontal_bias="0.446"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView12"
        app:layout_constraintVertical_bias="0.953" />

    <TextView
        android:id="@+id/tv_v_addCard_addType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:text="Add Card Type"
        android:textColor="#87BFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.652"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sp_v_addCard_cardType" />

    <TextView
        android:id="@+id/tv_v_addCard_errorMsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Please Fill Out All Fields"
        android:textColor="#DB1111"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_v_addCard_addType"
        app:layout_constraintVertical_bias="0.278" />

    <Button
        android:id="@+id/btn_v_addCard_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="32dp"
        android:text="Back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_v_addCard_errorMsg"
        app:layout_constraintVertical_bias="1.0"
        android:background="#ADD7F6"/>

    <Button
        android:id="@+id/btn_v_addCard_addCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="44dp"
        android:layout_marginBottom="32dp"
        android:text="Add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.969"
        app:layout_constraintStart_toEndOf="@+id/btn_v_addCard_back"
        app:layout_constraintTop_toBottomOf="@+id/tv_v_addCard_errorMsg"
        app:layout_constraintVertical_bias="1.0"
        android:background="#ADD7F6"/>
</androidx.constraintlayout.widget.ConstraintLayout>