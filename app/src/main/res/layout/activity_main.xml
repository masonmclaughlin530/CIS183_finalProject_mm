<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3F8EFC"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_v_main_login"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="65dp"
        android:layout_marginEnd="65dp"
        android:layout_marginBottom="155dp"
        android:background="#ADD7F6"
        android:text="Login"
        app:layout_constraintBottom_toTopOf="@+id/btn_v_main_signup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_v_main_errorMsg" />

    <EditText
        android:id="@+id/et_v_main_username"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="61dp"
        android:layout_marginEnd="61dp"
        android:layout_marginBottom="40dp"
        android:ems="10"
        android:hint="Username"
        android:inputType="text"
        android:textColor="#ADD7F6"
        app:layout_constraintBottom_toTopOf="@+id/et_v_main_password"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/et_v_main_password"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="35dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/tv_v_main_errorMsg"
        app:layout_constraintEnd_toEndOf="@+id/et_v_main_username"
        app:layout_constraintStart_toStartOf="@+id/et_v_main_username"
        app:layout_constraintTop_toBottomOf="@+id/et_v_main_username" />

    <Button
        android:id="@+id/btn_v_main_signup"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="64dp"
        android:layout_marginEnd="64dp"
        android:layout_marginBottom="47dp"
        android:background="#ADD7F6"
        android:text="Sign up"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_v_main_login" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="164dp"
        android:layout_height="0dp"
        android:layout_marginTop="36dp"
        android:layout_marginBottom="44dp"
        android:text="Welcome"
        android:textColor="#ADD7F6"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/et_v_main_username"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_v_main_errorMsg"
        android:layout_width="99dp"
        android:layout_height="0dp"
        android:layout_marginStart="84dp"
        android:layout_marginEnd="85dp"
        android:layout_marginBottom="47dp"
        android:text="Error"
        android:textColor="#FF0000"
        app:layout_constraintBottom_toTopOf="@+id/btn_v_main_login"
        app:layout_constraintEnd_toEndOf="@+id/et_v_main_password"
        app:layout_constraintStart_toStartOf="@+id/et_v_main_username"
        app:layout_constraintTop_toBottomOf="@+id/et_v_main_password" />

</androidx.constraintlayout.widget.ConstraintLayout>