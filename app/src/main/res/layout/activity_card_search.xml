<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CardSearch"
    android:background="#3f8efc">

    <Spinner
        android:id="@+id/sp_v_search_users"
        android:layout_width="0dp"
        android:layout_height="27dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="22dp"
        app:layout_constraintBottom_toTopOf="@+id/sp_v_search_sports"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/textView15"
        app:layout_constraintTop_toBottomOf="@+id/textView15" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="24sp"
        android:text="Search"
        android:textColor="#ADD7F6"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="60dp"
        android:text="Select User"
        android:textColor="#ADD7F6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/lv_v_search_sortedList"
        android:layout_width="0dp"
        android:layout_height="287dp"
        android:layout_marginBottom="107dp"
        android:background="#ADD7F6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_v_search_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="2dp"
        android:text="Back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="#ADD7F6"/>

    <Button
        android:id="@+id/btn_v_search_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="321dp"
        android:layout_marginBottom="2dp"
        android:text="Search"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="#ADD7F6"/>

    <TextView
        android:id="@+id/textView21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="19dp"
        android:layout_marginBottom="22dp"
        android:text="Select Sport"
        android:textColor="#ADD7F6"
        app:layout_constraintBottom_toTopOf="@+id/textView18"
        app:layout_constraintStart_toStartOf="parent" />

    <Spinner
        android:id="@+id/sp_v_search_sports"
        android:layout_width="0dp"
        android:layout_height="24dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="41dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="40dp"
        app:layout_constraintBottom_toBottomOf="@+id/sp_v_search_Brands"
        app:layout_constraintEnd_toEndOf="@+id/sp_v_search_Brands"
        app:layout_constraintStart_toStartOf="@+id/sp_v_search_Brands"
        app:layout_constraintTop_toTopOf="@+id/textView20" />

    <Spinner
        android:id="@+id/sp_v_search_Brands"
        android:layout_width="0dp"
        android:layout_height="27dp"
        android:layout_marginTop="138dp"
        android:layout_marginBottom="138dp"
        app:layout_constraintBottom_toBottomOf="@+id/et_v_search_lname"
        app:layout_constraintEnd_toEndOf="@+id/sp_v_search_Types"
        app:layout_constraintStart_toStartOf="@+id/sp_v_search_users"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="47dp"
        android:layout_marginBottom="47dp"
        android:text="Select Brand"
        android:textColor="#ADD7F6"
        app:layout_constraintBottom_toBottomOf="@+id/sp_v_search_Types"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/sp_v_search_sports" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:layout_marginTop="30dp"
        android:text="Select Type"
        android:textColor="#ADD7F6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView18" />

    <Spinner
        android:id="@+id/sp_v_search_Types"
        android:layout_width="194dp"
        android:layout_height="26dp"
        android:layout_marginTop="87dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="88dp"
        app:layout_constraintBottom_toBottomOf="@+id/et_v_search_fname"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/sp_v_search_sports" />

    <EditText
        android:id="@+id/et_v_search_fname"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:layout_marginStart="7dp"
        android:layout_marginEnd="17dp"
        android:ems="10"
        android:hint="First Name"
        android:inputType="text"
        android:textColor="#ADD7F6"
        app:layout_constraintBaseline_toBaselineOf="@+id/et_v_search_lname"
        app:layout_constraintEnd_toStartOf="@+id/et_v_search_lname"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/et_v_search_lname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="26dp"
        android:layout_marginBottom="34dp"
        android:ems="10"
        android:hint="Last Name"
        android:inputType="text"
        android:textColor="#ADD7F6"
        app:layout_constraintBottom_toTopOf="@+id/lv_v_search_sortedList"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>