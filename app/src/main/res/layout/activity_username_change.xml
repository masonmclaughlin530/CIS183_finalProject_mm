<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3F8EFC"
    tools:context=".UsernameChange">

    <TextView
        android:id="@+id/textView22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Change Your Username"
        android:textColor="#87BFFF"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_v_userChange_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="39dp"
        android:layout_marginBottom="29dp"
        android:background="#ADD7F6"
        android:text="Back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_v_userChange_change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="29dp"
        android:background="#ADD7F6"
        android:text="Change"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/et_v_userChange_name"
        android:layout_width="0dp"
        android:layout_height="62dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="188dp"
        android:layout_marginEnd="70dp"
        android:ems="10"
        android:hint="New User Name"
        android:inputType="text"
        android:textColor="#0ADD7F6F"
        app:layout_constraintEnd_toEndOf="@+id/btn_v_userChange_change"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_v_userChange_password"
        android:layout_width="0dp"
        android:layout_height="63dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="58dp"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="63dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="text"
        android:textColor="#ADD7F6"
        app:layout_constraintBottom_toTopOf="@+id/tv_v_userChange_errorMsg"
        app:layout_constraintEnd_toEndOf="@+id/et_v_userChange_name"
        app:layout_constraintStart_toStartOf="@+id/et_v_userChange_name"
        app:layout_constraintTop_toTopOf="@+id/textView23" />

    <TextView
        android:id="@+id/textView23"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="57dp"
        android:layout_marginEnd="16dp"
        android:text="Enter Password To Confirm"
        android:textColor="#3B28CC"
        app:layout_constraintEnd_toEndOf="@+id/et_v_userChange_password"
        app:layout_constraintTop_toBottomOf="@+id/et_v_userChange_name" />

    <TextView
        android:id="@+id/tv_v_userChange_errorMsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="39dp"
        android:layout_marginBottom="53dp"
        android:text="Error"
        android:textColor="#F80000"
        app:layout_constraintBottom_toTopOf="@+id/deleteUser"
        app:layout_constraintEnd_toEndOf="@+id/deleteUser" />

    <TextView
        android:id="@+id/deleteUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="72dp"
        android:text="Delete Account"
        android:textColor="#87BFFF"
        app:layout_constraintBottom_toTopOf="@+id/btn_v_userChange_back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>